<!--https://tomcat.apache.org/tomcat-9.0-doc/jndi-resources-howto.html-->
<Context>
    <Resource
            name="jdbc/carrental"
            driverClassName="com.mysql.cj.jdbc.Driver"
            url="jdbc:mysql://10.1.5.21:3306/carrental"
            username="carrental"
            password="carrental"
            auth="Container"
            type="javax.sql.DataSource"
            connectionProperties="zeroDateTimeBehavior=CONVERT_TO_NULL;"

            maxTotal="10"
            maxIdle="5"
            minIdle="3"
            maxWaitMillis="10000"

            removeAbandonedOnBorrow="true"
            removeAbandonedOnMaintenance="true"
            removeAbandonedTimeout="60"
            logAbandoned="true"
    />
</Context>