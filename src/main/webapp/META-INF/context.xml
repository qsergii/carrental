<Context>
    <!--mysql-->
    <Resource
            name="jdbc/mysql.carrental"
            driverClassName="com.mysql.cj.jdbc.Driver"
            url="jdbc:mysql://10.1.5.21:3306/carrental"
            username="carrental"
            password="carrental"
            auth="Container"
            type="javax.sql.DataSource"
            connectionProperties="zeroDateTimeBehavior=CONVERT_TO_NULL;"
            defaultTransactionIsolation="READ_COMMITTED"

            maxTotal="10"
            maxIdle="5"
            minIdle="3"
            maxWaitMillis="10000"

            removeAbandonedOnBorrow="true"
            removeAbandonedOnMaintenance="true"
            removeAbandonedTimeout="60"
            logAbandoned="true"
    />

    <!--postgresql-->
    <Resource
            name="jdbc/postgresql.carrental"
            driverClassName="org.postgresql.Driver"
            url="jdbc:postgresql://localhost:5432/carrental"
            username="carrental"
            password="carrental"
            auth="Container"
            type="javax.sql.DataSource"
            connectionProperties="zeroDateTimeBehavior=CONVERT_TO_NULL;"
            defaultTransactionIsolation="READ_COMMITTED"

            maxTotal="10"
            maxIdle="5"
            minIdle="3"
            maxWaitMillis="10000"

            removeAbandonedOnBorrow="true"
            removeAbandonedOnMaintenance="true"
            removeAbandonedTimeout="60"
            logAbandoned="true"
    />

</Context>
